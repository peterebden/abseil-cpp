; We turn on Bazel compat to use most of their things in this repo.
; There are some local changes to work around Bazel-isms that we are unlikely to ever support.
[bazel]
compatibility = true

[parse]
buildfilename = BUILD.plz
buildfilename = BUILD
buildfilename = BUILD.bazel
preloadbuilddefs = plz/compat.build_defs

[cpp]
testmain = ///com_google_googletest//:gtest_main
defaultoptcppflags = --std=c++17 -O3 -pipe -DNDEBUG -Wall -Werror
defaultdbgcppflags = --std=c++17 -g3 -pipe -DDEBUG -Wall -Werror